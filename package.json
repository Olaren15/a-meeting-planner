{
  "name": "a-meeting-planner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "lint": "next lint",
    "prepare": "husky install",
    "prestart": "npm run build",
    "start": "npx serve@latest out",
    "test": "npm run test:unit && npm run test:e2e:docker",
    "test:e2e": "playwright test",
    "test:e2e:docker": "docker run -it --rm --ipc=host --workdir=/my_tests -v $PWD:/my_tests mcr.microsoft.com/playwright:v1.36.0-jammy npm run test:e2e",
    "test:unit": "jest",
    "test:unit:ci": "jest --ci",
    "test:unit:update": "jest --updateSnapshot"
  },
  "dependencies": {
    "@js-temporal/polyfill": "^0.4.4",
    "autoprefixer": "^10.4.14",
    "classnames": "^2.3.2",
    "next": "^13.4.8",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "tailwindcss": "^3.3.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.7.3",
    "@playwright/test": "^1.36.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.4.0",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.8",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-extended": "^4.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
